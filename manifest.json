{
	"manifest_version": 2,
	"name": "Jira Enhancements",
	"version": "0.0.1",
	"permissions": [
		"storage",
		"background",
		"*://sprout.atlassian.com/*",
		"http://*/*"
	],
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": false
	},
	"content_scripts": [
		{
			"matches": [
				"*://sprout.atlassian.com/*"
			],
			"js": [
				"jquery-3.1.1.js",
				"/src/jira.tweaks.js"
			]
		}
	]
}
